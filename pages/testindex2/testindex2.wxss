page {
  height: 100%;
  background-color: #fc3;
}

.container {
  width: 100%;
  display: block;
  background-color: #fc3;
}

.container .top_img {
  width: 100%;
}

.container .content {
  width: 702rpx;
  height: 1202rpx;
  background-color: #fff;
  margin: 0 auto;
  border-radius: 12rpx;
  text-align: center;
  padding-top: 64rpx;
}

.container .content .text_1 {
  color: #333;
  font-size: 32rpx;
  display: block;
}

.container .content .text_2 {
  color: #333;
  font-size: 30rpx;
  margin-top: 30rpx;
  display: block;
}

.container .content .context {
  display: block;
  font-size: 28rpx;
  color: #333;
  width: 564rpx;
  text-align: left;
  margin: 40rpx auto 0;
  line-height: 40rpx;
}

.container .content .tips {
  width: 564rpx;
  font-size: 24rpx;
  color: #999;
  display: block;
  margin: 54rpx auto;
  text-align: left;
}

.container .content .radio-group {
  text-align: center;
  width: 624rpx;
  margin: 0rpx auto;
  display: flex;
  justify-content: space-around;
}

.container .content .radio-group .radio {
  width: 200rpx;
  height: 88rpx;
  line-height: 88rpx;
  display: block;
  margin: 10rpx auto;
  border-radius: 44rpx;
  text-align: center;
  border: 1rpx solid #e5e5e5;
  position: relative;
  font-size: 36rpx;
  color: 999;
}

.container .content .radio-group .radio radio {
  position: absolute;
  left: 26rpx;
  top: 50%;
  transform: translateY(-50%);
}

.container .content .radio-group .radio radio .wx-radio-input {
  border: none;
  background: #fff;
}

.container .content .radio-group .selected {
  background-color: #12bcf8;
  color: #fff;
}

.container .content .radio-group .selected radio .wx-radio-input {
  border: 1rpx solid #fff;
  background: #12bcf8;
}

.container .content .selected {
  background-color: #12bcf8;
  color: #fff;
}

.container .content .selected radio .wx-radio-input {
  border: 1rpx solid #fff;
  background: #12bcf8;
}

.container .content .submit_btn {
  width: 504rpx;
  height: 94rpx;
  border-radius: 47rpx;
  margin: 100rpx auto;
  display: block;
  line-height: 94rpx;
  text-align: center;
  color: #fff;
  font-size: 36rpx;
  background-color: #ffcc41;
}
