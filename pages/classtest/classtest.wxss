page {
  background-color: #e4edf7;
}

.container {
  display: block;
}

.container .top_img {
  width: 100%;
}

.box {
  height: 900rpx;
  overflow: hidden;
  z-index: 0;
  display: flex;
  flex-direction: column;
}

.box .club {
  height: 200rpx;
  width: 702rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  margin: 0 auto;
  z-index: 1000;
}

.box .club .item {
  width: 702rpx;
  height: 200rpx;
  background-color: #fff;
  display: flex;
  justify-content: left;
  align-items: center;
  position: relative;
  overflow: hidden;
  border-radius: 12rpx;
  box-shadow: 0rpx 0rpx 15rpx 3rpx #4781f8;
}

.box .club .item .slide-image {
  width: 206rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
}

.box .club .item .slide-image image {
  height: 76%;
  margin: 20rpx auto;
  display: block;
}

.box .club .item .right_icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 16rpx;
}

.box .club .item .right {
  padding: 40rpx 16rpx;
  box-sizing: border-box;
  width: 496rpx;
}

.box .club .item .right .title {
  font-size: 30rpx;
  color: #333;
  display: block;
  margin-bottom: 26rpx;
  text-align: left;
}

.box .club .item .right .context {
  font-size: 24rpx;
  color: #999;
  display: block;
  width: 78%;
  white-space: normal;
  text-align: left;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.club image {
  height: 140rpx;
  width: 140rpx;
}

.club text {
  display: block;
  width: 100%;
  font-size: 24rpx;
  line-height: 40rpx;
  text-align: center;
}

