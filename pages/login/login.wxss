.container {
  width: 100%;
}

.container .header_img {
  width: 100%;
}

.container .input_group {
  margin-top: 70rpx;
}

.container .input_group .input_item {
  background-color: #fff;
  border-radius: 45rpx;
  border: 1rpx solid #eee;
  padding: 0 30rpx;
  height: 90rpx;
  width: 560rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: left;
  align-items: center;
  position: relative;
  margin-bottom: 36rpx;
}

.container .input_group .input_item .icon_img {
  width: 45rpx;
}

.container .input_group .input_item input {
  border-left: 1rpx solid #eee;
  margin-left: 30rpx;
  padding-left: 30rpx;
  font-size: 32rpx;
}

.container .input_group .input_item .close_btn {
  width: 30rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

.container .submit_btn {
  margin-top: 44rpx;
  width: 494rpx;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  background-color: #12bcf8;
  border-radius: 44rpx;
  color: #fff;
  box-shadow: 1rpx 1rpx 2rpx #b2b2b2;
  margin-bottom: 44rpx;
}

.container .go_login {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin: 36rpx auto;
  text-decoration: underline;
}

/*操作按钮*/

.btnoptv {
  display: flex;
  justify-content: space-around;
  width: 90%;
}
