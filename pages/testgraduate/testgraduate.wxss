page {
  background-color: #e4edf7;
}

.container {
  width: 100%;
  display: block;
}

.container .subject_content {
  background-color: #fff;
  border-bottom-left-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
  height: auto;
}

.container .top_img {
  width: 100%;
}

.container .subject_index {
  text-align: center;
  padding-top: 36rpx;
}

.container .subject_index .index_num {
  font-size: 28rpx;
  color: #333;
  display: block;
}

.container .subject_index .subject_title {
  font-size: 34rpx;
  color: #333;
  margin: 28rpx auto 0;
  display: block;
  width: 576rpx;
}

.container .subject_index .bottom_line {
  margin: 32rpx 70rpx;
}

.container .subject_index .bottom_line .left,
.container .subject_index .bottom_line .right {
  width: 220rpx;
  height: 5rpx;
  background-color: #e5e5e5;
  vertical-align: middle;
  display: inline-block;
}

.container .subject_index .bottom_line .mid {
  height: 20rpx;
  width: 20rpx;
  border-radius: 50%;
  margin: 0 10rpx;
  display: inline-block;
  background-color: #e5e5e5;
  vertical-align: middle;
}

.container .radio-group {
  text-align: center;
  width: 100%;
  padding-bottom: 40rpx;
}

.container .radio-group .radio {
  width: 608rpx;
  display: block;
  margin: 15rpx auto 40rpx;
  position: relative;
}

.container .radio-group .radio .radio_index {
  height: 70rpx;
  width: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 50%;
  background-color: #fff;
  border: 1rpx solid #d2d2d2;
  color: #999;
  font-size: 30rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 36rpx;
  box-sizing: border-box;
}

.container .radio-group .radio .radio_context {
  display: inline-block;
  vertical-align: middle;
  width: 500rpx;
  font-size: 28rpx;
  color: #333;
  text-align: left;
}

.container .radio-group .radio radio {
  position: absolute;
  display: none;
  left: 26rpx;
  top: 50%;
  transform: translateY(-50%);
}

.container .radio-group .radio radio .wx-radio-input {
  border: none;
  background: #fff;
}

.container .radio-group .selected {
  color: #fff;
}

.container .radio-group .selected .radio_index {
  height: 70rpx;
  width: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 50%;
  background-color: #12bcf8;
  border: 1rpx solid #12bcf8;
  color: #fff;
}

.container .radio-group .selected radio .wx-radio-input {
  border: 1rpx solid #fff;
  background: #12bcf8;
}

.container textarea {
  width: 702rpx;
  height: 334rpx;
  padding: 36rpx 32rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 12rpx;
  margin: 0rpx auto;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #333;
}

.btn_list {
  padding: 26rpx 14rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.btn_list .prev_subject, .btn_list .next_subject {
  width: 300rpx;
  height: 88rpx;
  color: #fff;
  line-height: 88rpx;
  text-align: center;
  font-size: 36rpx;
  border-radius: 44rpx;
  background-color: #12bcf8;
}

.btn_list .submit_btn {
  width: 480rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  background-color: #ffcc41;
  border-radius: 40rpx;
}
