.container {
  background-color: #e4edf7;
  height: 100%;
  display: block;
}

.container .top_img {
  width: 100%;
}

.container .class_list .item {
  width: 712rpx;
  height: 142rpx;
  line-height: 142rpx;
  text-align: center;
  margin: 8rpx auto;
  border-radius: 10rpx;
  background-color: #fff;
  font-size: 32rpx;
  position: relative;
  overflow: hidden;
}

.container .class_list .item:nth-of-type(3n+1)::before {
  content: "";
  display: inline-block;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: -54rpx;
  height: 108rpx;
  width: 108rpx;
  border-radius: 50%;
  background-color: #12bcf8;
}

