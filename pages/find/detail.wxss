/* pages/find/detail.wxss */

/*活动列表数据*/

.activityv {
  width: 92%;
  height: 700rpx;
  background: rgba(255, 255, 255, 1);
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
  margin: 25rpx 4% 0 4%;
  border-bottom: 1rpx solid #8c8c8c;
}

.actimgv {
  width: 100%;
  height: 306rpx;
  background-size: cover;
  background-repeat: no-repeat;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
}

/*活动名称*/

.actnamev {
  margin: 26rpx 20rpx 10rpx 20rpx;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/*行内容*/

.hangv {
  margin: 28rpx 20rpx 0 20rpx;
  display: flex;
}

.hangicon {
  width: 35rpx;
  height: 24rpx;
  margin-right: 16rpx;
  margin-top: 6rpx;
}

.hangtxt {
  color: #999;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.btnblue {
  width: 180rpx;
  height: 60rpx;
  background: rgba(8, 155, 255, 1);
  position: relative;
  left: 70%;
  top: -250rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #fff;
}

.btngrey {
  width: 180rpx;
  height: 60rpx;
  background: #ccc;
  position: relative;
  left: 70%;
  top: -250rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #fff;
}

/*详情部分*/

.introv {
  margin: 30rpx 32rpx;
}

/*底部的操作按钮*/

.bottomv {
  position: fixed;  
  padding-bottom: 40rpx;
  bottom: 0;
  left: 0;
  display: flex;
  width: 100%;
  background-color: #fff;
}

.kefuv {
  width: 20%;
  height: 80rpx;
  border-radius: 40rpx;
  line-height: 80rpx;
  text-align: center;
  background: #12bcf8 !important;
  color: #fff !important;
  font-size: 36rpx;
  font-weight: 600;
  margin-top: 45rpx;
  margin-left: 32rpx;
}

.kefuv::after {
  border: 0;
  opacity: 0;
  background: none !important;
  color: #fff !important;
}

.optbtno {
  width: 64%;
  height: 80rpx;
  background: rgba(255, 204, 65, 1);
  border-radius: 40rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 36rpx;
  font-weight: 600;
  margin-top: 45rpx;
  margin-right: 32rpx;
}

.optbtnoh {
  width: 64%;
  height: 80rpx;
  background: #ccc;
  border-radius: 40rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 36rpx;
  font-weight: 600;
  margin-top: 45rpx;
  margin-right: 32rpx;
}
